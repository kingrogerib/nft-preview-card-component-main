body
  background-color: hsl(217, 54%, 11%)
  margin: 0
  padding: 0
  font-size: 18px
  font-family: 'Outfit', sans-serif
  color: hsl(0, 0%, 100%)

.outer-container
  background-color: hsla(216, 50%, 8%, 0.1)
  width: 450px
  height: 650px
  border-radius: 15px
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  position: absolute
  
.container 
  display: flex
  flex-direction: column
  width: 70%
  background-color: hsl(216, 50%, 16%)
  position: relative
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  border-radius: 15px
  overflow: hidden
  padding: 26px
  box-shadow: 0 20px 0 20px hsla(216, 50%, 7%, 0.2)
  .image-container
    position: relative
    display: inline-block
    margin-bottom: 10px
    .base-image
      width: 100%
      border-radius: 10px 
    .overlay
      background-color: hsl(178, 100%, 50%)
      border-radius: 10px 
      top: 50%
      left: 50%
      width: 100%
      height: 100%
      transform: translate(-50%, -50%)
      position: absolute
      transition: opacity 0.3s
      opacity: 0%
    .overlay-image
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      position: absolute
      transition: opacity 0.3s
      opacity: 0%
    &:hover
      cursor: pointer
      .overlay-image
        opacity: 1
      .overlay
        opacity: 50%
  .title-description
    h1 
      font-size: 1.3rem
      margin-bottom: 0
      color: hsl(0, 0%, 100%)
      &:hover
        color: hsl(178, 100%, 50%)
        cursor: pointer
    p 
      font-weight: 300
      color: hsl(215, 51%, 70%)
  .eth-time
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    .price
      color: hsl(178, 100%, 50%)
      display: flex
      align-items: center
      font-weight: 500
      img  
        margin-right: 10px
        object-fit: cover
        object-position: center
    .time
      color: hsl(215, 51%, 70%)
      display: flex
      align-items: center
      font-weight: 300
      img  
        margin-right: 10px
        object-fit: cover
        object-position: center
  .line  
    height: 2px
    background-color: hsl(215, 32%, 27%)
    margin: 15px 0px
  .creator
    display: flex
    flex-direction: row
    align-items: center   
    img
      width: 10%
      object-fit: cover
      object-position: center
      border: 1px solid white
      border-radius: 50%
      margin-right: 10px
    .span 
      color: hsl(215, 51%, 70%)
    .creator-text
      color: hsl(0, 0%, 100%)
      &:hover
        color: hsl(178, 100%, 50%)
        cursor: pointer